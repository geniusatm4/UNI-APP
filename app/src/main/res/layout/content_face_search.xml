<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_face_search"
        tools:context="com.zx.upm.face.view.FaceSearchActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="368dp"
            android:layout_height="0dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <ImageView
                android:id="@+id/btnSelectImage"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:src="@drawable/icon_camera"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <EditText
                    android:id="@+id/etIdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="false"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_et"
                    android:gravity="center_vertical"
                    android:hint="@string/id_number_example"
                    android:paddingLeft="90dp"
                    android:textSize="16sp"/>

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:layout_alignLeft="@id/etIdNumber"
                    android:layout_alignParentBottom="false"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/id_number"
                    android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
